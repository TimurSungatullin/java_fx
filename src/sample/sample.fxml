<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <BorderPane>
        <top>
            <FlowPane>
                <BorderPane.margin>
                    <Insets bottom="5.0" left="25.0" right="25.0" top="5.0" />
                </BorderPane.margin>
                <Button text="Добавить" fx:id="addButton" onAction="#showDialog"/>
                <Button text="Обновить" fx:id="refreshButton"/>
            </FlowPane>
        </top>
        <center>
            <TableView fx:id="tableUsers">
                <columns>
                    <TableColumn prefWidth="150.0" text="Name" fx:id="nameColumn"/>
                    <TableColumn prefWidth="150.0" text="Age" fx:id="ageColumn"/>
                    <TableColumn prefWidth="150.0" text="Active" fx:id="activeColumn"/>
                    <TableColumn prefWidth="150.0" text="Gender" fx:id="genderColumn"/>
                </columns>
            </TableView>
        </center>
    </BorderPane>
</AnchorPane>